{
	"configurations": [
	{
		"name": "Debug lex",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/kompilator-dbg",
		"args": ["../programs/program0.imp","./out.mr"],
		"stopAtEntry": false,
		"cwd": "${fileDirname}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			 {
				  "description": "Enable pretty-printing for gdb",
				  "text": "-enable-pretty-printing",
				  "ignoreFailures": true
			 },
			 {
				  "description": "Set Disassembly Flavor to Intel",
				  "text": "-gdb-set disassembly-flavor intel",
				  "ignoreFailures": true
			 }
		]
	},
